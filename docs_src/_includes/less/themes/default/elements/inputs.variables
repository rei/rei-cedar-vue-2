////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// REI-CEDAR INPUTS VARIABLES
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// COLOR PALETTES
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
@input-border:                                   @core-architectural-1;
@input-border-error:                             @utility-error;
@input-border-focus:                             @core-action-2;
@input-bg:                                       @core-architectural-5;
@input-bg-disabled:                              @core-background-2;
@input-background-error:                         @alert-danger-bg; //TODO should be @input-bg-error;
@input-color:                                    @text-color;
@input-color-placeholder:                        lighten( @core-architectural-1, 50% ); // Placeholder text color

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// SIZE AND SHAPE
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Default `.form-control` height
@input-height-base:              ( (@btn-font-size * @btn-line-height) + (@padding-base-vertical * 2) );
// Large `.form-control` height
@input-height-large:             (ceil(@btn-font-size-lg * @btn-line-height) + (@padding-large-vertical * 2) + .2);
// Small `.form-control` height
@input-height-small:             (floor(@font-size-small * @line-height-base) + (@padding-small-vertical * 2) + .2);
// Disabled cursor for form controls and buttons.
@cursor-disabled:                                     not-allowed;
