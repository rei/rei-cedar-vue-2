////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// REI-CEDAR TYPOGRAPHY THEME VARIABLES
//
// Font, line-height, and color for body text, headings, and more.
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// COLOR PALETTES
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
@text-color:                                          @cdr-color-text-primary;
@text-muted:                                          @cdr-color-text-secondary;
@text-overlay:                                        #ffffff;
@headings-color:                                      inherit;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// SIZE AND SHAPE
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Family
//----------------------------------------------------------------------------------------------------------------------
//Brand map
@fallback-sans-serif:                              @cdr-font-family-sans;
@font-family-sans-serif:                           @cdr-font-family-sans;

@font-family-serif:                                @cdr-font-family-serif;

@brand-font-primary-name:                          @cdr-font-family-serif-brand-font;
@brand-font:                                       @cdr-font-family-serif;

@brand-font-secondary-name:                        @cdr-font-family-sans-brand-font; 
@brand-font-secondary:                             @cdr-font-family-sans;

@brand-font-tertiary-name:                         @cdr-font-family-serif-brand-font;
@brand-font-tertiary:                              @cdr-font-family-serif;

@font-family-monospace:                            Menlo, Monaco, Consolas, "Courier New", monospace;


//Implementation
@font-family-base:                                 @cdr-font-family-serif;
@headings-font-family:                             @cdr-font-family-serif;
@headings-font-family-secondary:                   @cdr-font-family-sans;
// Line-height
//----------------------------------------------------------------------------------------------------------------------
// Unit-less `line-height` for use in components like buttons.
@line-height-open:                                 1.5;
@line-height-neutral:                              1.333;
@line-height-closed:                               1.125;
// Computed "line-height" (`font-size` * `line-height`) for use with `margin`, `padding`, etc.
@line-height-computed:                              (@font-size-base * @line-height-open); //rem * line-height ~2.4rem


// Size
//----------------------------------------------------------------------------------------------------------------------
// Body copy
@font-size-root:                                    62.5%;
@font-size-base:                                    1.6rem;
@font-size-large:                                   1.8rem;
@font-size-smaller:                                 1.4rem;
@font-size-small:                                   1.2rem;

// Headings
// Core
@font-size-h1:                                      2.843rem;
@font-size-h1-sm:                                   3.79rem;
@font-size-h1-md:                                   @font-size-h1-sm;
@font-size-h1-lg:                                   5.025rem;

@font-size-h2:                                      @font-size-h1;
@font-size-h2-sm:                                   @font-size-h1;
@font-size-h2-md:                                   @font-size-h1;
@font-size-h2-lg:                                   @font-size-h1-sm;

@font-size-h3:                                      2.133rem;


@font-size-h4:                                      1.6rem;
@font-size-h5:                                      @font-size-h4;
@font-size-h6:                                      @font-size-h4;

// Announce
@font-size-announce-primary:                        6.734rem;
@font-size-announce-primary-sm:                     8.976rem;
@font-size-announce-primary-md:                     11.965rem;
@font-size-announce-primary-lg:                     15.949rem;

@font-size-announce-secondary:                      @font-size-announce-primary;
@font-size-announce-secondary-sm:                   @font-size-announce-primary-sm;
@font-size-announce-secondary-md:                   @font-size-announce-primary-sm;
@font-size-announce-secondary-lg:                   @font-size-announce-primary-md;

// Hero
@font-size-hero-primary:                            5.052rem;
@font-size-hero-primary-sm:                         6.734rem;
@font-size-hero-primary-md:                         @font-size-hero-primary-sm;
@font-size-hero-primary-lg:                         @font-size-announce-primary-sm;

// Explore - Impact
@font-size-impact-h1:                               @font-size-h1;
@font-size-impact-h1-sm:                            @font-size-h1-sm;
@font-size-impact-h1-md:                            @font-size-h1-md;
@font-size-impact-h1-lg:                            @font-size-h1-lg;

@font-size-impact-h2:                               @font-size-h2;
@font-size-impact-h2-sm:                            @font-size-h2-sm;
@font-size-impact-h2-md:                            @font-size-h2-md;
@font-size-impact-h2-lg:                            @font-size-h2-lg;

@font-size-impact-h3:                               @font-size-h3;
@font-size-impact-h3-sm:                            @font-size-h3;
@font-size-impact-h3-md:                            @font-size-h3;
@font-size-impact-h3-lg:                            @font-size-h3;

@font-size-impact-h4:                               @font-size-h4;
@font-size-impact-h5:                               @font-size-h5;
@font-size-impact-h6:                               @font-size-h6;

// Weight
//----ar------------------------------------------------------------------------------------------------------------------
@headings-font-weight:                              normal; // Matches font family definition
@semibold:                                          600; // for sentinel headings
@brand-font-secondary-bold:                         700;

// Path
//----------------------------------------------------------------------------------------------------------------------
@headings-font-path:                                "/font/";
