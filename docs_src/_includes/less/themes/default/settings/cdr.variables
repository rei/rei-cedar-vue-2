.cdr-list-base-mixin() {
  list-style-type: none;
  padding: 0;
  margin: 0;

  /* spacing
    ---------- */
  & > li + li {
    margin-top: @cdr-space-half-x;
  }
}

.cdr-list-base-nested-mixin() {
  margin-top: @cdr-space-half-x;
  padding-left: 1em; // TODO: is em correct?
  list-style-type: none;
}


/* compact */
.cdr-list-compact-mixin() {
  & > li + li {
    margin-top: @cdr-space-quarter-x;
  }
}

/* compact nested */
.cdr-list-compact-nested-mixin() {
  margin-top: @cdr-space-quarter-x;
}


/* ordered */
.cdr-list-ordered-mixin() {
  list-style-type: decimal;
  padding-left: 1.5em;
  list-style-position: outside;

  & li {
    padding: 0 0 0 @cdr-space-quarter-x;
  }
}

.cdr-list-ordered-nested-mixin() {
  position: relative;
  padding-left: 1em;

  & > li {
    padding-left: 0;

    &::before {
      content: '\2013';
      position: absolute;
      color: @cdr-color-text-secondary;
      left: 0;
    }
  }
}

.cdr-list-unordered-mixin() {
  position: relative;
  padding-left: 1em;

  & > li::before {
    content: '\2022';
    position: relative;
    margin-left: -1em;
    padding-right: @cdr-space-half-x;
    color: @cdr-color-text-secondary;
  }
}

/* unordered nested */
.cdr-list-unordered-nested-mixin() {
  position: relative;
  padding-left: 1em;

  & > li {
    &::before {
      content: '\2013';
      position: relative;
      margin-left: -1em;
      padding-right: @cdr-space-half-x;
      color: @cdr-color-text-secondary;
    }
  }
}

.cdr-table-base-text-mixin() {
  .cdr-text-utility-sans-200;
  color: @cdr-color-text-primary;
}

.cdr-table-base-mixin() {
  .cdr-table-base-text-mixin();

  border: none;
  border-collapse: collapse;

  tr {
    background-color: @cdr-color-background-table-row;
  }

  thead tr {
    background-color: @cdr-color-background-table-header;
  }

  th,
  td {
    min-height: 48px;
    color: @cdr-color-text-primary;
    padding: @cdr-space-inset-one-x-squish;
    text-align: left;
  }

  th {
    .cdr-text-utility-sans-strong-200;
  }


  caption {
    .cdr-text-utility-sans-strong-300;
    text-align: left;
    margin-bottom: @cdr-space-half-x;
  }
}

.cdr-table-small-mixin {
  th, td {
    padding: 0.4rem 1.6rem;
  }
}

.cdr-table-medium-mixin {
  th, td {
    padding: @cdr-space-inset-one-x-squish;
  }
}

.cdr-table-large-mixin {
  th, td {
    padding: @cdr-space-inset-one-x;
  }
}

.cdr-table-border-mixin() {
  @table-border-default: 1px solid @cdr-color-border-table-default;
  @table-border-head: 1px solid @cdr-color-border-table-head;

  tr + tr > * {
    border-top: @table-border-default;
  }

  thead {
    tr + tr > * {
      border-top: @table-border-head;
    }
  }

  tbody, tfoot {
    tr + tr > * {
      border-top: @table-border-default;
    }
  }

  thead + tbody,
  tbody + tfoot {
    border-top: @table-border-default;
  }
}

.cdr-table-striped-mixin() {
  tr:nth-child(odd) {
    background-color: @cdr-color-background-table-row-alt;
  }

  thead {
    // override body styling when head is present
    & + tbody tr {
      // striping rows
      &:nth-child(even) {
        background-color: @cdr-color-background-table-row-alt;
      }

      // disabled default
      &:nth-child(odd) {
        background-color: @cdr-color-background-table-row;
      }
    }
  }

  tbody,
  tfoot {
    tr {
      // striping rows
      &:nth-child(odd) {
        background-color: @cdr-color-background-table-row-alt;
      }
    }
  }
}

.cdr-table-full-width-mixin() {
  width: 100%;
}

.cdr-table-responsive-mixin {
  display: block;
  width: 100%;
  overflow-x: auto;
}

.cdr-table-hover-mixin {
  tr:hover > * {
    background-color: @cdr-color-background-table-header;
  }
}
