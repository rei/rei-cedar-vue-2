{
  "packages": [
    "src/**/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "message": "chore(release): publish components",
      "allowBranch": "master"
    },
    "publish": {
      "allowBranch": "master"
    }
  },
  "ignoreChanges": [
    "src/**/*.md", 
    "src/**/__tests__/*", 
    "src/**/examples/*",
    "src/components/themer/*"
  ]
}
