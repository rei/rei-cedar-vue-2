////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
// REI-CEDAR GROUPS THEME VARIABLES
//
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  display
//----------------------------------------------------------------------------------------------------------------------
@group-display-flex-ruleset: {
    align-items: flex-start;
    flex-flow: row wrap;
    justify-content: space-between;
};
@group-position:                                                relative;
@group-display:                                                 flex;
@group-display-child-container:                                 inline-flex;
@group-display-grandchild-flex-ruleset: {
    flex: 1 0;
};
//overflow
@group-overflow-display-flex-ruleset: {
    align-items: center;
    flex-flow: nowrap;
};
@group-overflow:                                                auto;
@group-overflow-cursor:                                         pointer;
//fixed
@group-fixed-display-flex-ruleset: {
  align-items: stretch;
};

//  gutter
//-------------------------------------------------------------------------
@group-gutter-width:                                             0;
@group-gutter-width-primary:                                     1rem;
@group-gutter-open-10-ruleset: {
    padding: @group-gutter-width-primary;
        > [class^=col-],
        > [class*=col-] {
        padding: @group-gutter-width-primary;
    }
};

//  grid
//-------------------------------------------------------------------------
@group-grid-auto-width:                                               0;
@group-grid-auto-flex-ruleset: {
    flex-grow: 1;
};
@group-grid-no-flex-ruleset: {
    flex-grow: 0;
};

//  list chrome
//-------------------------------------------------------------------------
@group-list-tile-ruleset: {
    box-shadow: @tile-list-box-shadow;
    border-bottom: @tile-list-border;
};
@group-end-list-tile-ruleset: {
    box-shadow: @tile-box-shadow;
    border-bottom: none;
};
