/* ==========================================================================
  # CdrPagination
  
  All values should map to variables in
  vars/CdrPagination.vars.pcss
  in order to allow for theming

  TOC:

    :Base - CdrPagination
========================================================================== */

.cdr-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  list-style: none;
  padding: 0;

  &__li {
    &--links {
      display: none;

      & + & {
        margin-left: $space-1-x;
      }
    }

    &--select {
      display: block;
    }
  }

  &__link {
    @include redwood-display-30();

    color: $text-color-primary-on-light;
    display: block;
    padding: $inset-three-quarter-x-squish;
    text-decoration: none;

    &:global(.current) {
      box-shadow: inset 0 0 0 1px $taken-for-granite;
      border-radius: $radius-softer;

      &:hover,
      &:focus,
      &:active {
        text-decoration: none;
      }
    }

    &:hover,
    &:focus,
    &:active {
      color: $text-color-primary-on-light;
      text-decoration: underline;
    }
  }

  &__ellipse {
    display: block;
    padding: $inset-three-quarter-x-squish;
  }

  &__prev {
    display: flex;
    align-items: center;
    margin-right: $space-1-and-a-half-x;
  }

  &__next {
    display: flex;
    align-items: center;
    margin-left: $space-1-and-a-half-x;
  }

  &__caret {
    &--prev {
      margin-right: $space-eighth-x;
    }

    &--next {
      margin-left: $space-eighth-x;
    }
  }

  &__select {
    max-width: 240px;
  }

  /* Responsive */
  @media (--sm-mq) {
    &__li--links {
      display: block;
    }

    &__li--select {
      display: none;
    }
  }
}
