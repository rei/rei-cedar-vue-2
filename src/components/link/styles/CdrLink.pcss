/* ==========================================================================
  # CdrLink

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Standalone
========================================================================== */

.cdr-link {
  @include cdr-link-base-mixin;
}

/* Style variants
  ========================================================================== */

/* Standalone
    ========== */
.cdr-link--standalone {
  @include cdr-link-standalone-mixin;
}

/* Light Theme */

/* Theme via cascade

:global(.cdr-bg--light) .cdr-link {
  @include cdr-link-lightmode-mixin;
}
*/

/* Theme via prop */

:global(.on-light).cdr-link {
  @include cdr-link-lightmode-mixin;
}

/* Dark Theme */

/* Theme via cascade

:global(.cdr-bg--dark) .cdr-link {

  @include cdr-link-darkmode-mixin;
}
*/

/* Theme via prop */

:global(.on-dark).cdr-link {
  @include cdr-link-darkmode-mixin;
}
