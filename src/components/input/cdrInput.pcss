.cdr-input-group {
  margin-bottom: 1.6rem;
}

.cdr-input-validation {
  position: relative;

  &__icon {
    position: absolute;
    top: calc(($sys-font-spruce-bdy-25-line-height - $sys-font-spruce-bdy-25-font-size) / 2 + $spacing-space-sm);
    right: $spacing-space-sm;
    height: $sys-font-spruce-bdy-25-font-size;
    width: $sys-font-spruce-bdy-25-font-size;

    &--valid > svg {
      fill: $sys-color-success;
    }

    &--warn > svg {
      fill: $sys-color-warning;
    }

    &--error > svg {
      fill: $sys-color-error;
    }
  }
}

.cdr-animated-errors {
  &-enter-active,
  &-leave-active {
    transition: opacity 350ms ease, transform 350ms ease;
    transform-origin: top;
  }

  &-leave-active + &-enter-active {
    transition-delay: 350ms;
    position: absolute;
    width: 100%;
  }

  &-enter,
  &-leave-to {
    opacity: 0;
    transform: scaleY(0);
  }
}

.cdr-input-messages {
  position: relative;
  font-size: $sys-font-spruce-cpt-10-font-size;
  line-height: $sys-font-spruce-cpt-10-line-height;
  color: $sys-font-spruce-cpt-10-color;
  font-style: $sys-font-spruce-cpt-10-font-style;
  font-weight: $sys-font-spruce-cpt-10-font-weight;
  font-family: $sys-font-spruce-cpt-10-font-family;

  &__notification {
    padding: $spacing-space-sm;
    border-style: solid;
    border-width: 1px;
    border-top: none;

    &:last-of-type {
      border-bottom-right-radius: $radius-input;
      border-bottom-left-radius: $radius-input;
    }

    &--error {
      border-color: $sys-color-error;
      background-color: rgba(204, 0, 0, 0.1);
    }

    &--warn {
      border-color: $sys-color-warning;
      background-color: rgba(252, 196, 25, 0.2);
    }
  }
}

.cdr-input {
  font-size: $sys-font-spruce-bdy-25-font-size;
  line-height: $sys-font-spruce-bdy-25-line-height;
  color: $sys-font-spruce-bdy-25-color;
  font-style: $sys-font-spruce-bdy-25-font-style;
  font-weight: $sys-font-spruce-bdy-25-font-weight;
  font-family: $sys-font-spruce-bdy-25-font-family;
  background-color: $sys-color-input;
  border-color: $sys-color-input-stroke;
  border-style: solid;
  border-radius: $radius-input;
  border-width: 1px;
  display: block;
  padding: $spacing-space-sm;
  width: 100%;

  &--error {
    border-color: $sys-color-error;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  &--warn {
    border-color: $sys-color-warning;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  &::placeholder {
    font-style: italic;
  }

  &[disabled] {
    background-color: $sys-color-disabled-input;

    &::placeholder {
      color: $sys-color-disabled-placeholder;
    }
  }
}

.cdr-label {
  /* TODO: update with new typography value */
  font-weight: bold;

  &--disabled {
    color: $sys-color-disabled-label;
  }

  &--error {
    color: $sys-color-error;
  }
}
