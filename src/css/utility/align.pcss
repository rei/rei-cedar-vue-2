/* ==========================================================================
  # alignment
  
  Utility classes for aligning content

  TOC:

    :Text Align
    :center
      :block
========================================================================== */

/*
* Text Align
* --------------------------------------------
*/

.cdr-text-left {
  text-align: left !important;
}

.cdr-text-center {
  text-align: center !important;
}

.cdr-text-right {
  text-align: right !important;
}

/*
* Center
* --------------------------------------------
*/

/* block
=========== */

.cdr-center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
