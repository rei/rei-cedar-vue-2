  @media (min-width: #{$cdr-breakpoint-md}) {
    @content;
  }
}

@mixin md-mq-only {
  @media (min-width: #{$cdr-breakpoint-md}) and (max-width: calc(#{$cdr-breakpoint-lg} - 1px)) {
    @content;
  }
}

// LG
@mixin lg-mq {
  @media (min-width: #{$cdr-breakpoint-lg}) {
    @content;
  }
}

@mixin lg-mq-only {
  @media (min-width: #{$cdr-breakpoint-lg}) {
    @content;
  }
}
