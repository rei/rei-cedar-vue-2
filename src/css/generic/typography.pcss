/* ==========================================================================/*
* Typography utility classes
*
* TOC:
*   :base text styles
*     :paragraphs
*       :body
*     :headings
*       :subheading
*       :display
*       :simple
*         :large
*         :medium
*         :small
# cdr-label
========================================================================== */

.cdr-text,
h1.cdr-text,
h2.cdr-text,
h3.cdr-text,
h4.cdr-text,
h5.cdr-text,
h6.cdr-text {
  @include cdr-text-base-mixin;

  /* Paragraphs
    ========================================================================== */

  /* Body
    ========== */

  &--body {
    @include cdr-text-body-responsive-mixin;
  }

  /* Caption
    ========== */

  &--citation {
    @include cdr-text-citation-mixin;
  }

  /* Headings
    ========================================================================== */

  /* Subheading
    ========== */

  &--subheading {
    @include cdr-text-subheading-mixin;
  }

  /* Display
    ========== */

  &--display {
    @include cdr-text-display-responsive-mixin;

    /* non responsive */
    &-static {
      @include cdr-text-display-static-mixin;
    }
  }

  /* Heading-small
    ========== */

  &--heading-small {
    @include cdr-text-heading-small-responsive-mixin;

    /* non responsive */
    &-static {
      @include cdr-text-heading-small-static-mixin;
    }
  }

  /* Heading-medium
    ========== */

  &--heading-medium {
    @include cdr-text-heading-medium-responsive-mixin;

    /* non responsive */
    &-static {
      @include cdr-text-heading-medium-static-mixin;
    }
  }

  /* Heading-large
    ========== */

  &--heading-large {
    @include cdr-text-heading-large-responsive-mixin;

    /* non responsive */
    &-static {
      @include cdr-text-heading-large-static-mixin;
    }
  }
}
