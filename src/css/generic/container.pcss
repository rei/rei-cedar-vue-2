$container-x-padding-xs: 16px;
$container-x-padding-md: 32px;

/*
** TOC:
**
** container fluid
** container
*/

/* ==========================================================================
   # CONTAINER FLUID
   ========================================================================== */

.cdr-container-fluid {
  padding-left: $container-x-padding-xs;
  padding-right: $container-x-padding-xs;
  width: 100%;
}

@media (--md-mq) {
  .cdr-container-fluid {
    padding-left: $container-x-padding-md;
    padding-right: $container-x-padding-md;
  }
}

/* ==========================================================================
   # CONTAINER
   ========================================================================== */

.cdr-container {
  margin-left: auto;
  margin-right: auto;
  padding-left: $container-x-padding-xs;
  padding-right: $container-x-padding-xs;
  width: 100%;
  max-width: 1232px;
}

@media (--md-mq) {
  .cdr-container {
    padding-left: $container-x-padding-md;
    padding-right: $container-x-padding-md;
  }
}
